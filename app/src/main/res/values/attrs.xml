<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NotificationView">
        <attr name="tip_offset" format="dimension"/>
        <attr name="tip_height" format="dimension"/>
        <attr name="tip_gravity" format="enum">
            <enum name="top" value="0"/>
            <enum name="right" value="1"/>
            <enum name="bottom" value="2"/>
            <enum name="left" value="3"/>
        </attr>
        <attr name="tip_base_width" format="dimension"/>
        <attr name="fill_color" format="color"/>
        <attr name="stroke_color" format="color"/>
        <attr name="text_color" format="color"/>
        <attr name="corner_radius" format="dimension"/>
        <attr name="notif_text" format="string"/>
    </declare-styleable>
</resources>